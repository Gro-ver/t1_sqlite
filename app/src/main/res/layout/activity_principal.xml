<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrincipalActivity">

    <EditText
        android:id="@+id/txt_nom_consulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="consultar usuario"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_consultar_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Consultar Usuario" />

        <Button
            android:id="@+id/btn_mostrar_todos"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Mostrar Todos" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_usuarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>